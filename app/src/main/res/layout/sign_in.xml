<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in"
    android:id="@+id/all"
    android:clickable="true">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="20dp">
            <TextView
                android:id="@+id/tv"
                style="@style/small_text"
                android:text="@string/phone_number_"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:layout_marginHorizontal="18dp"
                android:textSize="22sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="18dp">
                <EditText
                    android:id="@+id/fphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/_213"
                    android:text="@string/_213"
                    android:inputType="phone"
                    android:padding="14dp"
                    android:layout_marginRight="5dp"
                    android:textAlignment="center"
                    android:background="@drawable/style_text_edit"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/_000_000_000"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:padding="14dp"
                    android:inputType="phone"
                    android:background="@drawable/style_text_edit"/>
            </LinearLayout>
            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="12dp"
                android:layout_marginTop="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/Next"
                android:background="@color/yellowish"
                android:paddingVertical="16dp"
                android:textColor="#fff"/>
            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="00-00-00"
                android:inputType="number"
                android:textColor="@color/black"
                android:padding="14dp"
                android:layout_marginHorizontal="18dp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="12dp"
                android:layout_marginTop="12dp"
                android:text="Continue"
                android:paddingVertical="16dp"
                android:background="@color/yellowish"
                android:textColor="#fff"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/resend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/resend"
                android:textAlignment="center"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="40dp">
                <TextView
                    android:id="@+id/sign_up"
                    android:text="@string/sign_up"
                    android:clickable="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/link_text"/>
                <TextView
                    style="@style/small_text"
                    android:text="@string/you_are_new"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

</RelativeLayout>