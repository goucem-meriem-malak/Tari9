<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:layout_margin="8dp"
    android:id="@+id/request">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/request_text"
                    android:layout_gravity="right"
                    android:text="@string/onn"
                    android:textColor="@color/yellowish"/>
                <TextView
                    android:id="@+id/date"
                    style="@style/small_small_text"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right">
                <TextView
                    style="@style/request_text"
                    android:layout_gravity="right"
                    android:text="@string/requested"
                    android:textColor="@color/yellowish"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                <TextView
                    android:id="@+id/type"
                    style="@style/small_small_text"
                    android:layout_gravity="right"/>
                <TextView
                    android:id="@+id/name"
                    style="@style/small_small_text"
                    android:layout_gravity="right"/>
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/request_text"
                    android:text="@string/phone_number_"
                    android:layout_gravity="right"
                    android:textColor="@color/yellowish"/>
                <TextView
                    android:id="@+id/phone"
                    style="@style/small_small_text"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/request_text"
                    android:text="@string/your_address"
                    android:layout_gravity="right"
                    android:textColor="@color/yellowish"/>
                <TextView
                    android:id="@+id/address"
                    style="@style/small_small_text"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_vehicle">
                <TextView
                    style="@style/request_text"
                    android:text="@string/your_vehicle"
                    android:layout_gravity="right"
                    android:textColor="@color/yellowish"/>
                <TextView
                    android:id="@+id/vehicle"
                    style="@style/small_small_text"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/p"
                    style="@style/request_text"
                    android:text="@string/price"
                    android:layout_gravity="right"
                    android:textColor="@color/yellowish"/>
                <TextView
                    android:id="@+id/price"
                    style="@style/small_small_text"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="left"
                android:gravity="left">
                <TextView
                    style="@style/request_text"
                    android:text="@string/statee"
                    android:layout_gravity="right"
                    android:textColor="@color/yellowish"/>
                <TextView
                    android:id="@+id/state"
                    style="@style/small_small_text"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>